{
  "compilerOptions": {
    "lib": ["ES5", "ES6"],
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "types": ["@types/jest"]
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "./src/**/*.test.ts"]
}
